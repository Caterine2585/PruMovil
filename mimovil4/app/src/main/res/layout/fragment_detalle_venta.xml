<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/tvTituloDetalleVenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detalle de Ventas"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/etCantidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Cantidad" />

        <EditText
            android:id="@+id/etFechaSalida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="2005-02-25" />

        <EditText
            android:id="@+id/etIDProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID_Producto" />

        <EditText
            android:id="@+id/etIDVenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID_Venta" />

        <Button
            android:id="@+id/btnCrearDetalleVenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crear Detalle Venta"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/btnMostrarDetalleVenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mostrar Detalles"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/btnActualizarDetalleVenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Actualizar Detalle" />

        <Button
            android:id="@+id/btnEliminarDetalleVenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eliminar Detalle" />

        <TextView
            android:id="@+id/tvResultadoDetalleVenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:background="#EEEEEE"
            android:text="Aquí se mostrarán los resultados" />
    </LinearLayout>
</ScrollView>
