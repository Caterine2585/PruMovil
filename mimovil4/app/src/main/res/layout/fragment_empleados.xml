<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

        <!-- Campos del formulario -->
        <EditText
                android:id="@+id/etDocumentoEmp"
                android:hint="Documento_Empleado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        <EditText
                android:id="@+id/etTipoDocEmp"
                android:hint="Tipo_Documento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        <EditText
                android:id="@+id/etNombreEmp"
                android:hint="Nombre_Usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        <EditText
                android:id="@+id/etApellidoEmp"
                android:hint="Apellido_Usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        <EditText
                android:id="@+id/etEdadEmp"
                android:hint="Edad"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        <EditText
                android:id="@+id/etCorreoEmp"
                android:hint="Correo_Electronico"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        <EditText
                android:id="@+id/etTelefonoEmp"
                android:hint="Telefono"
                android:inputType="phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        <EditText
                android:id="@+id/etGeneroEmp"
                android:hint="Genero (M/F)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        <EditText
                android:id="@+id/etEstadoEmp"
                android:hint="ID_Estado (EST001)"
                android:text="EST001"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        <EditText
                android:id="@+id/etRolEmp"
                android:hint="ID_Rol (ROL001/2)"
                android:text="ROL002"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        <!-- Imagen del empleado -->
        <ImageView
                android:id="@+id/imgFotoEmp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:contentDescription="Foto del empleado"
                android:background="#EEEEEE"
                android:scaleType="centerCrop" />

        <!-- Botón para seleccionar foto -->
        <Button
                android:id="@+id/btnSeleccionarFoto"
                android:text="Seleccionar Foto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />

        <!-- Botón POST -->
        <Button
                android:id="@+id/btnCrearEmpleado"
                android:text="Crear Empleado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp" />

        <!-- Botón GET -->
        <Button
                android:id="@+id/btnGetEmpleados"
                android:text="Mostrar Empleados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp" />

        <!-- Botón PUT -->
        <Button
                android:id="@+id/btnActualizarEmpleado"
                android:text="Actualizar Empleado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp" />

        <!-- Botón DELETE -->
        <Button
                android:id="@+id/btnEliminarEmpleado"
                android:text="Eliminar Empleado (por Documento)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp" />

        <!-- Resultado del GET (después de los 4 botones) -->
        <TextView
                android:id="@+id/tvEmpleados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_marginTop="16dp"
                android:text="Aquí aparecerán los empleados" />

        <!-- Contenedor dinámico para empleados (para mostrar botón “Mostrar imagen”) -->
        <LinearLayout
                android:id="@+id/layoutEmpleados"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:padding="8dp" />

    </LinearLayout>
</ScrollView>
