<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".HomeFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

        <!-- ðŸ”¹ RecyclerView opcional (si quieres dejarlo) -->

        <!-- ðŸ”¹ Campos de entrada -->
        <EditText
                android:id="@+id/etDocumento"
                android:hint="Documento"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <EditText
                android:id="@+id/etNombre"
                android:hint="Nombre"
                android:inputType="textPersonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <EditText
                android:id="@+id/etApellido"
                android:hint="Apellido"
                android:inputType="textPersonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <EditText
                android:id="@+id/etTelefono"
                android:hint="TelÃ©fono"
                android:inputType="phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <EditText
                android:id="@+id/etFecha"
                android:hint="Fecha de Nacimiento (YYYY-MM-DD)"
                android:inputType="date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <EditText
                android:id="@+id/etGenero"
                android:hint="GÃ©nero (M/F)"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <EditText
                android:id="@+id/etEstado"
                android:hint="ID_Estado (ej: EST001)"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <!-- ðŸ”¹ BotÃ³n -->
        <Button
                android:id="@+id/btnRegistrar"
                android:text="Registrar Cliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/purple_500"
                android:textColor="@android:color/white"/>

    </LinearLayout>
</ScrollView>
